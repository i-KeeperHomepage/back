# Database
DATABASE_URL="mysql://username:password@localhost:3306/ikeeper"

# JWT
JWT_SECRET="your-secret-key-here-change-in-production"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=3000

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# File Upload
FILE_UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain"

# Email Verification (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="i-Keeper"
VERIFICATION_CODE_EXPIRES_IN="600000"  # 10 minutes in milliseconds

FRONT_URL="http://localhost:5173"  # Frontend URL for CORS and email links